<h3></h3>
<div class="table-responsive">
    <form id="createOrder" action="create_payment_url" method="POST">
        <div class="form-group" style="display: none">
            <input type="text" class="form-control" id="orderId" name="orderId" placeholder="Mã đơn hàng" value="" />
        </div>
        <div class="form-group">
            <label for="amount"></label>
            <input
                type="text"
                class="form-control"
                id="amount"
                name="amount"
                placeholder="Số tiền"
                readonly="true"
                value=""
            />
        </div>
        <div class="form-group">
            <label>Chọn Phương thức thanh toán:</label>
            <label class="control-label">
                <div class="controls">
                    <label class="radio-inline">
                        <input type="radio" name="bankCode" id="defaultPaymentMethod" value="" checked="true" />
                        Cổng thanh toán VNPAYQR
                    </label>
                    <div class="controls">
                        <label class="radio-inline">
                            <input type="radio" name="bankCode" id="vnpayqrPaymentMethod" value="VNPAYQR" />
                            Thanh toán qua ứng dụng hỗ trợ VNPAYQR
                        </label>
                    </div>
                    <div class="controls">
                        <label class="radio-inline">
                            <input type="radio" name="bankCode" id="vnbankPaymentMethod" value="VNBANK" />
                            Thanh toán qua ATM-Tài khoản ngân hàng nội địa
                        </label>
                    </div>
                    <div class="controls">
                        <label class="radio-inline">
                            <input type="radio" name="bankCode" id="intcardPaymentMethod" value="INTCARD" />
                            Thanh toán qua thẻ quốc tế
                        </label>
                    </div>
                </div>
            </label>
        </div>
        <div class="form-group">
            <label>Ngôn ngữ</label>
            <label class="control-label">
                <div class="controls">
                    <label class="radio-inline">
                        <input type="radio" name="language" id="vnLanguage" value="vn" checked="true" />
                        Tiếng việt
                    </label>
                    <div class="controls">
                        <label class="radio-inline">
                            <input type="radio" name="language" id="enLanguage" value="en" />
                            Tiếng anh
                        </label>
                    </div>
                </div>
            </label>
        </div>
        <button type="submit" class="btn btn-default" id="btnPopup">Thanh toán</button>
    </form>
</div>
<p>&nbsp;</p>
<script>
    // Lấy tham số price từ URL
    const urlParams = new URLSearchParams(window.location.search);
    const price = urlParams.get('amount');
    const bookingId = urlParams.get('orderId');

    // Nếu price không rỗng, đặt giá trị vào trường input
    if (price !== null) {
        document.getElementById('amount').value = price;
    }
    if (bookingId) {
        document.getElementById('orderId').value = bookingId;
    }
</script>
