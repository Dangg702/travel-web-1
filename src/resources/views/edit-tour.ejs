<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">Edit Form</h3>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/dashboard">dashboard</a></li>
                <li class="breadcrumb-item active text-muted" aria-current="page">edit tour</li>
            </ol>
        </nav>
    </div>
    <div class="col-12" id="alert-container"></div>
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Edit Tour <%= tour.name %></h4>
                    <form
                        class="upload-form"
                        id="upload-form"
                        action="https://travel-web-ks0z.onrender.com/api/tour/edit-tour/<%= tour._id %>?_method=PUT"
                        method="post"
                    >
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" class="form-control" id="name" name="name" value="<%= tour.name %>" />
                        </div>
                        <div class="form-group">
                            <label for="placeData">Place ID</label>
                            <input
                                type="text"
                                class="form-control"
                                id="placeData"
                                name="placeData"
                                value="<%= tour.placeData %>"
                            />
                        </div>
                        <div class="form-group">
                            <label for="duration">Duration</label>
                            <input
                                type="text"
                                class="form-control"
                                id="duration"
                                name="duration"
                                value="<%= tour.duration %>"
                            />
                        </div>
                        <div class="form-group">
                            <label for="dateGo">Date go</label>
                            <input
                                type="text"
                                class="form-control"
                                id="dateGo"
                                name="dateGo"
                                value="<%= tour.dateGo %>"
                            />
                        </div>
                        <div class="form-group">
                            <label for="dateBack">Date back</label>
                            <input
                                type="text"
                                class="form-control"
                                id="dateBack"
                                name="dateBack"
                                value="<%= tour.dateBack %>"
                            />
                        </div>
                        <div class="form-group">
                            <label for="desc">Description</label>
                            <textarea class="form-control" id="desc" name="desc" required rows="4">
                            <%= tour.desc %> 
                            </textarea>
                        </div>
                        <div class="form-group">
                            <label for="price">Price</label>
                            <input type="text" class="form-control" id="price" name="price" value="<%= tour.price %>" />
                        </div>
                        <div class="form-group">
                            <label for="departure">Departure</label>
                            <input
                                type="text"
                                class="form-control"
                                id="departure"
                                name="departure"
                                value="<%= tour.departure%>"
                            />
                        </div>
                        <div class="form-group">
                            <label for="destination">Destination</label>
                            <input
                                type="text"
                                class="form-control"
                                id="destination"
                                name="destination"
                                value="<%= tour.destination %>"
                            />
                        </div>
                        <div class="form-group">
                            <label for="vehicle">Vehicle</label>
                            <input
                                type="text"
                                class="form-control"
                                id="vehicle"
                                name="vehicle"
                                value="<%= tour.vehicle %>"
                            />
                        </div>
                        <div class="form-group">
                            <label for="scheduleHtml">Schedule</label>
                            <textarea
                                name="scheduleHtml"
                                id="scheduleHtml"
                                cols="30"
                                rows="10"
                                placeholder="This is Schedule content"
                            >
                            <%= tour.scheduleHtml %>
                            </textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace('scheduleHtml', {
        extraPlugins: 'filebrowser',
        filebrowserBrowseUrl: '/list', //upload location
        filebrowserUploadMethod: 'form',
        filebrowserUploadUrl: '/api/tour/upload', //route
        removePlugins: 'exportpdf',
    });
</script>
